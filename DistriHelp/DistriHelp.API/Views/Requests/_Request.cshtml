@model DistriHelp.API.Models.RequestViewModel

@if (User.IsInRole("User"))
{
    <div class="form-group">
        <label asp-for="Userr" class="control-label"></label>
        <input asp-for="Userr" type="hidden" value="@User.Identity.Name" class="form-control" />
        <span asp-validation-for="Userr" class="text-danger"></span>
    </div>
            }
            else
            {
<div class="form-group">
    <label asp-for="Userr" class="control-label"></label>
    <input asp-for="Userr" class="form-control" />
    <span asp-validation-for="Userr" class="text-danger"></span>
</div>
            }

<div class="form-group">
    <label asp-for="Tittle" class="control-label"></label>
    <input asp-for="Tittle" class="form-control" />
    <span asp-validation-for="Tittle" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CategoryId" class="control-label"></label>
    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RequestTypeId" class="control-label"></label>
    <select asp-for="RequestTypeId" asp-items="Model.RequestTypes" class="form-control"></select>
    <span asp-validation-for="RequestTypeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="StatusId" class="control-label"></label>
    <select asp-for="StatusId" asp-items="Model.Statuses" class="form-control"></select>
    <span asp-validation-for="StatusId" class="text-danger"></span>
</div>
@if (User.IsInRole("Admin") || User.IsInRole("BI"))
{
    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
}

<div class="form-group">
    <label asp-for="DateI" class="control-label"></label>
    <input asp-for="DateI" class="form-control" />
    <span asp-validation-for="DateI" class="text-danger"></span>
</div>
@if (User.IsInRole("Admin") || User.IsInRole("BI"))
{
    <div class="form-group">
        <label asp-for="DateF" class="control-label"></label>
        <input asp-for="DateF" class="form-control" />
        <span asp-validation-for="DateF" class="text-danger"></span>
    </div>
}

@if (User.IsInRole("Admin") || User.IsInRole("BI"))
{
    <div class="form-group">
        <label asp-for="Resolution" class="control-label"></label>
        <textarea asp-for="Resolution" class="form-control"></textarea>
        <span asp-validation-for="Resolution" class="text-danger"></span>
    </div>
}